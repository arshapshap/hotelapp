<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base style -->
    <style name="HotelsApp" />

    <!-- Toolbar -->
    <style name="HotelsApp.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/HotelsApp.TextAppearance.Headline</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <!-- Text -->
    <style name="HotelsApp.TextAppearance.Large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="HotelsApp.TextAppearance.Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="HotelsApp.TextAppearance.Body1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="HotelsApp.TextAppearance.Body1.Medium">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="HotelsApp.TextAppearance.Body2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="HotelsApp.TextAppearance.Body2.Medium">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="HotelsApp.TextAppearance.Body3" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="HotelsApp.TextAppearance.Body3.Medium">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <!-- TagView -->
    <style name="HotelsApp.TagView" />

    <style name="HotelsApp.TagView.Rating">
        <item name="drawableStart">@drawable/ic_star</item>
        <item name="textColor">@color/orange</item>
        <item name="shapeColor">@color/light_orange</item>
    </style>

    <style name="HotelsApp.TagView.Details">
        <item name="drawableEnd">@drawable/ic_arrow</item>
        <item name="textColor">@color/blue</item>
        <item name="shapeColor">@color/light_blue</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="HotelsApp.TagView.Peculiarity">
        <item name="textColor">@color/grey</item>
        <item name="shapeColor">@color/light_grey</item>
    </style>

    <!-- Buttons -->
    <style name="HotelsApp.Button">
        <item name="android:paddingVertical">@dimen/button_default_vertical_padding</item>
        <item name="cornerRadius">@dimen/normal_corner_radius</item>
    </style>

    <!-- Containers -->
    <style name="HotelsApp.BottomButtonContainer">
        <item name="android:background">@drawable/shape_stroked_rectangle</item>
        <item name="android:paddingHorizontal">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/medium_margin</item>
        <item name="android:paddingBottom">@dimen/large_margin</item>
    </style>
</resources>