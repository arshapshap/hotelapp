<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">

    <ImageView
        android:id="@+id/imageViewIconStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/menu_item_view_margin_between"
        android:importantForAccessibility="no"
        tools:src="@drawable/ic_emoji_happy" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHeadline"
            style="@style/HotelsApp.TextAppearance.Body1.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Удобства" />

        <TextView
            android:id="@+id/textViewDescription"
            style="@style/HotelsApp.TextAppearance.Body2.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            tools:text="Самое необходимое" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/imageViewIconEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/menu_item_view_margin_between"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_arrow"
        app:tint="@color/black" />

</merge>