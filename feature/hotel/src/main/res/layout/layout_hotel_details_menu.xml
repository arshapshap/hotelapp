<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/default_margin"
    android:background="@drawable/shape_normal_rounded_rectangle"
    android:backgroundTint="@color/grey200"
    android:orientation="vertical"
    android:padding="@dimen/menu_view_padding"
    app:divider="@drawable/shape_divider"
    app:dividerPadding="@dimen/menu_view_divider_padding"
    app:showDividers="middle"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.arshapshap.hotelapp.designsystem.customviews.MenuItemView
        android:id="@+id/buttonConveniences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:descriptionText="Самое необходимое"
        app:drawable="@drawable/ic_emoji_happy"
        app:headlineText="Удобства" />

    <com.arshapshap.hotelapp.designsystem.customviews.MenuItemView
        android:id="@+id/buttonIncluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:descriptionText="Самое необходимое"
        app:drawable="@drawable/ic_tick_square"
        app:headlineText="Что включено" />

    <com.arshapshap.hotelapp.designsystem.customviews.MenuItemView
        android:id="@+id/buttonNotIncluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:descriptionText="Самое необходимое"
        app:drawable="@drawable/ic_close_square"
        app:headlineText="Что не включено" />
</androidx.appcompat.widget.LinearLayoutCompat>